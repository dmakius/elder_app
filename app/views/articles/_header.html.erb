 <style>
 .well{
  background:url('http://themepix.com/demo3/wp-content/themes/OrangeCounty/images/nav-bg.png') repeat-x scroll 0 0 #cb520b
 }
 </style>

 <div class="filter well" style="opacity:0.9;">
      <%= form_tag articles_path, method: :get do %>
      <div class = "row">
        <div class = "col-md-4">
          <%= label_tag :publication %>
        </div>
        <div class = "col-md-8">
          <%= label_tag "published" %>   
        </div>
      </div>
      <div class = "row">
        <div class = "col-md-4">
          <%= text_field_tag :publication, params[:publication], {:class => "form-control" }%>
        </div>
        <div class = "col-md-4">
          <%= date_select :date, :date,{},{:class=>"form-group"}%>
        </div>
         <div class = "col-md-4">
          <%= submit_tag "Search" , :class => "btn btn-primary", :style => "float:left;"%>
          </div>
      </div>    
      <% end %> 
</div>
 
 